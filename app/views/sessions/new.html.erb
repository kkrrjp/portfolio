<div id="users">
  <section id="signin">
    <header>
      <div class="main-header">
        <div class="nav">
          <a href="#main-nav" class="menu open-menu">☰</a>
          <a href="#" class="menu close-menu">☰</a>
        </div>
        <div class="brand">
          <a href="/"><%= Portfolio::Application.config.site_title %></a>
        </div>
      </div>
      <div class="container">
        <h2>ログイン</h2>
      </div>
    </header>
    <div class="container">
      <div class="inner">
        <div class="users-form">
          <%= form_for(:user, :url => sessions_path) do |f| %>
            <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "alert alert-#{key}") %>
            <% end %>
            <div class="field">
              <%= f.label :email, 'メールアドレス' %>
              <%= f.text_field :email %>
            </div>

            <div class="field">
              <%= f.label :password, 'パスワード' %>
              <%= f.text_field :password %>
            </div>

            <div class="field">
              <p class="right"><a href="">パスワードを忘れた方</a></p>
              <button class="button sassy-button">ログイン</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>

