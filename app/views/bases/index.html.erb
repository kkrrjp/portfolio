<div id="homepage">
  <div id="top">
    <div class="container">
      <div class="inner">
        <h1><%= Portfolio::Application.config.site_title%></h1>
        <p class="explain"><%= @test %></p>

        <ul class="buttons">
          <% if !signed_in? %>
          <li>
            <a href="/signup" class="button sassy-button-green">登録</a>
          </li>
          <li>
            <a href="/signin" class="button sassy-button-blue">サインイン</a>
          </li>
          <% else %>
          <li>
            <a href="/<%= current_user.name%>" class="button sassy-button-blue">あなたのポートフォリオ</a>
          </li>
          <% end %>
          <li class="tiny_heading_sub">
            <a href="/sample">>>ポートフォリオのサンプルページ</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>


